<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Status listener per debug caricamento configurazione -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <!-- Appender console -->
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender file -->
    <appender name="FileAppender" class="ch.qos.logback.core.FileAppender">
        <file>log.txt</file> <!-- file di output nella root del progetto -->
        <append>true</append> <!-- aggiunge al file esistente -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: solo WARN ed ERROR -->
    <root level="WARN">
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="FileAppender"/>
    </root>

    <!-- Logger specifico per la tua app (opzionale) -->
    <!--
    <logger name="com.example.demo" level="INFO" additivity="false">
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="FileAppender"/>
    </logger>
    -->

</configuration>